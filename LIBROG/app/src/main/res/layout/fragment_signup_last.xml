<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/su_nickname_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        android:layout_marginTop="56dp"
        android:text="리브로그"
        android:textSize="20sp"
        android:textColor="@color/green"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/su_explain1_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" 님,"
        android:layout_marginTop="56dp"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/su_nickname_tv"/>
    <TextView
        android:id="@+id/su_last_explain2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="프로필을 꾸며주세요"
        android:layout_marginTop="4dp"
        android:layout_marginStart="34dp"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/su_explain1_tv"
        app:layout_constraintStart_toStartOf="parent"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/su_profile_iv"
        android:layout_width="117dp"
        android:layout_height="117dp"
        android:layout_marginTop="65dp"
        app:civ_border_overlay="false"
        app:civ_border_width="1dp"
        app:civ_border_color="@color/green"
        android:src="@drawable/btn_input_password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/su_last_explain2"
        />
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/su_last_camera"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginTop="83dp"
        android:layout_marginStart="91dp"
        app:civ_border_overlay="false"
        android:src="@drawable/ic_sign_up_camera"
        app:layout_constraintStart_toStartOf="@id/su_profile_iv"
        app:layout_constraintTop_toTopOf="@id/su_profile_iv"
        />
    <TextView
        android:id="@+id/su_nickname_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="57dp"
        android:layout_marginStart="34dp"
        android:text="자기소개"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/su_profile_iv"
        app:layout_constraintStart_toStartOf="parent"/>
    <EditText
        android:id="@+id/su_nickname_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        android:layout_marginTop="22dp"
        android:background="@null"
        android:hint="자기소개를 입력해주세요"
        android:inputType="text"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/su_nickname_title" />

    <View
        android:id="@+id/su_nickname_underscore_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="6dp"
        android:layout_marginStart="34dp"
        android:layout_marginEnd="34dp"
        android:background="@color/green"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/su_nickname_et" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/su_last_finish_btn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="34dp"
        android:layout_marginEnd="34dp"
        android:layout_marginTop="490dp"
        android:background="@drawable/btn_login_login_border"
        android:text="리브로그 시작하기"
        android:textColor="@color/green"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>