<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="135dp"
    android:layout_height="163dp"
    android:layout_marginLeft="12dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/item_home_book_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/home_big_waterdrop_border"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_home_book_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="95dp"
        android:text="사피엔스"
        android:textSize="15sp"
        android:fontFamily="@font/pd_semibold"
        app:layout_constraintStart_toStartOf="@+id/item_home_book_iv"
        app:layout_constraintEnd_toEndOf="@+id/item_home_book_iv"
        app:layout_constraintTop_toTopOf="@+id/item_home_book_iv" />
    <TextView
        android:id="@+id/item_home_book_writer_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="유발하라리"
        android:textSize="13sp"
        android:fontFamily="@font/pd_medium"
        app:layout_constraintStart_toStartOf="@+id/item_home_book_iv"
        app:layout_constraintEnd_toEndOf="@+id/item_home_book_iv"
        app:layout_constraintTop_toBottomOf="@+id/item_home_book_title_tv" />
    <TextView
        android:id="@+id/item_home_book_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="2022.05.06"
        android:textSize="12sp"
        android:fontFamily="@font/pd_regular"
        app:layout_constraintStart_toStartOf="@+id/item_home_book_iv"
        app:layout_constraintEnd_toEndOf="@+id/item_home_book_iv"
        app:layout_constraintTop_toBottomOf="@+id/item_home_book_writer_tv" />

</androidx.constraintlayout.widget.ConstraintLayout>