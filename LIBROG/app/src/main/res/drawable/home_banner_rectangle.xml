<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- Drop Shadow Stack -->
    <item>
        <shape>
            <padding
                android:top="10dp" />
            <corners
                android:radius="18dp"/>

            <solid android:color="@color/gray" />
        </shape>


    </item>
    <item>
        <shape>
            <padding
                android:top="10dp" />
            <corners
                android:radius="18dp"/>
            <solid android:color="@color/light_gray" />
        </shape>
    </item>
    <item>
        <shape>
            <padding
                android:top="10dp" />
            <corners
                android:radius="18dp"/>

            <solid android:color="#D3D3D3" />
        </shape>
    </item>

    <!-- Background -->
    <item>
        <shape>
            <solid android:color="@android:color/white" />
            <corners
                android:radius="18dp"/>
        </shape>
    </item>

</layer-list>


