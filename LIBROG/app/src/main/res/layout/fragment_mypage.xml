<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        tools:context=".ui.main.mypage.MypageFragment">
        <TextView
            android:id="@+id/profile_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/menu_mypage"
            android:textSize="27sp"
            android:layout_marginStart="29dp"
            android:layout_marginTop="41dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="44dp"
            android:layout_marginEnd="30dp"
            android:src="@drawable/ic_profile_setting"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
        <View
            android:id="@+id/profile_line1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="18dp"
            android:background="#D9D9D9"
            app:layout_constraintTop_toBottomOf="@id/profile_title_tv"
            app:layout_constraintStart_toStartOf="parent"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_iv"
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:layout_marginTop="25dp"
            android:layout_marginStart="34dp"
            app:civ_border_overlay="false"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/green"
            android:src="@drawable/btn_input_password"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profile_line1"
            />
        <TextView
            android:id="@+id/profile_name"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="36dp"
            android:layout_marginStart="43dp"
            android:text="리브로그"
            android:textSize="17sp"
            app:layout_constraintStart_toEndOf="@id/profile_iv"
            app:layout_constraintTop_toBottomOf="@id/profile_line1"/>
        <TextView
            android:id="@+id/profile_intro"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:layout_marginStart="43dp"
            android:text="자기소개"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@id/profile_iv"
            app:layout_constraintTop_toBottomOf="@id/profile_name"/>
        <View
            android:id="@+id/profile_line2"
            android:layout_width="350dp"
            android:layout_height="1dp"
            android:layout_marginTop="25dp"
            android:layout_marginStart="14dp"
            android:layout_marginEnd="14dp"
            android:background="#D9D9D9"
            app:layout_constraintTop_toBottomOf="@id/profile_iv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:text="로그인 된 계정을 확인할 수 있어요"
            android:textSize="12sp"
            android:textColor="#6A6A6A"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profile_line2"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="61dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/profile_line2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_app_login_icon"
                android:src="@drawable/ic_profile_app_login"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_kakao_login_icon"
                android:src="@drawable/ic_profile_kakao_login"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="21dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="112dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/profile_line2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="연결완료"
                android:textSize="10sp"
                android:textColor="#64BE78"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="26dp"
                android:text="연결하기"
                android:textSize="10sp"
                android:textColor="#969696"/>
        </LinearLayout>
        <View
            android:id="@+id/profile_line3"
            android:layout_width="350dp"
            android:layout_height="1dp"
            android:layout_marginTop="152dp"
            android:layout_marginStart="14dp"
            android:layout_marginEnd="14dp"
            android:background="#D9D9D9"
            app:layout_constraintTop_toBottomOf="@id/profile_line2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/profile_plant_list_btn"
                android:layout_width="314dp"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/btn_profile_plant_list_border"
                android:paddingEnd="24dp"
                android:text="식물도감"
                android:textColor="@color/black"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/profile_line3" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="18dp"
            android:layout_marginStart="176dp"
            android:src="@drawable/ic_profile_leaf"
            app:layout_constraintStart_toStartOf="@id/profile_plant_list_btn"
            app:layout_constraintTop_toTopOf="@id/profile_plant_list_btn"/>
        <View
            android:id="@+id/profile_line4"
            android:layout_width="350dp"
            android:layout_height="1dp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="14dp"
            android:layout_marginEnd="14dp"
            android:background="#D9D9D9"
            app:layout_constraintTop_toBottomOf="@id/profile_plant_list_btn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <LinearLayout
            android:id="@+id/profile_icons"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/profile_line4"
            app:layout_constraintStart_toStartOf="parent">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_profile_pot"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="29dp"
                android:src="@drawable/ic_profile_bookmark"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="29dp"
                android:src="@drawable/ic_profile_rate"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="29dp"
                android:src="@drawable/ic_profile_record_line"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="29dp"
                android:src="@drawable/ic_profile_record"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:layout_marginStart="22dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/profile_line4"
            app:layout_constraintStart_toEndOf="@id/profile_icons">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="@string/profile_pot"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginTop="37dp"
                android:text="@string/profile_book"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginTop="37dp"
                android:text="@string/profile_rate"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginTop="37dp"
                android:text="@string/profile_record_line"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginTop="37dp"
                android:text="@string/profile_record"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="54dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/profile_line4"
            app:layout_constraintEnd_toEndOf="parent">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="총 "/>
                <TextView
                    android:id="@+id/mypage_flower_cnt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/green"
                    android:text="8"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="개"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="총 "/>
                <TextView
                    android:id="@+id/mypage_reading_cnt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/green"
                    android:text="13"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="권"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="총 "/>
                <TextView
                    android:id="@+id/mypage_star_cnt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/green"
                    android:text="6"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="개"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="총 "/>
                <TextView
                    android:id="@+id/mypage_quote_cnt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/green"
                    android:text="6"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="개"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="총 "/>
                <TextView
                    android:id="@+id/mypage_content_cnt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/green"
                    android:text="2"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="개"/>
            </LinearLayout>

        </LinearLayout>
        <View
            android:id="@+id/profile_line5"
            android:layout_width="350dp"
            android:layout_height="1dp"
            android:layout_marginTop="310dp"
            android:layout_marginStart="14dp"
            android:layout_marginEnd="14dp"
            android:background="#D9D9D9"
            app:layout_constraintTop_toBottomOf="@id/profile_line4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/mypage_login_btn"
            android:layout_width="314dp"
            android:layout_height="39dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="49dp"
            android:background="@drawable/btn_profile_login_border"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profile_line5"
            app:layout_constraintBottom_toBottomOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>