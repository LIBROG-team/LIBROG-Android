<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/login_app_logo"
        android:layout_width="27dp"
        android:layout_height="58dp"
        android:layout_marginTop="87dp"
        android:layout_marginStart="45dp"
        android:src="@drawable/ic_login_app_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/login_introduce1_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="45dp"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="색다른 독서 기록의 시작"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_app_logo"/>
    <TextView
        android:id="@+id/login_introduce2_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:textSize="20sp"
        android:textColor="@color/green"
        android:textStyle="bold"
        android:text="리브로그"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_introduce1_tv"/>
    <TextView
        android:id="@+id/login_introduce3_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="에 오신 것을 환영합니다"
        app:layout_constraintStart_toEndOf="@id/login_introduce2_tv"
        app:layout_constraintTop_toBottomOf="@id/login_introduce1_tv"/>

    <TextView
        android:id="@+id/login_email_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="67dp"
        android:layout_marginStart="45dp"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="이메일"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_introduce2_tv"/>


    <EditText
        android:id="@+id/login_id_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="45dp"
        android:layout_marginTop="13dp"
        android:background="@null"
        android:hint="이메일을 입력하세요"
        android:inputType="text"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_email_title" />

    <View
        android:id="@+id/login_id_underscore_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="3dp"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="45dp"
        android:background="@color/green"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_id_et" />

    <TextView
        android:id="@+id/login_pwd_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:layout_marginStart="45dp"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="비밀번호"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_id_underscore_view"/>


    <EditText
        android:id="@+id/login_pwd_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="45dp"
        android:layout_marginTop="13dp"
        android:background="@null"
        android:hint="비밀번호를 입력하세요"
        android:inputType="text"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_pwd_title" />

    <View
        android:id="@+id/login_pwd_underscore_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="3dp"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="45dp"
        android:background="@color/green"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_pwd_et" />

    <TextView
        android:id="@+id/login_error_tv"
        android:layout_width="4dp"
        android:layout_height="12dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="13dp"
        android:textColor="#FF3030"
        android:textSize="13sp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_pwd_underscore_view" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/login_log_in_btn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="56dp"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="45dp"
        android:background="@drawable/btn_login_login_border"
        android:text="로그인"
        android:textColor="@color/green"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_pwd_underscore_view"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="19dp"
        app:layout_constraintTop_toBottomOf="@id/login_log_in_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:id="@+id/login_sign_up_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="#B5B5B5"
            android:text="회원가입" />
        <View
            android:layout_width="1dp"
            android:layout_height="16dp"
            android:layout_marginTop="2dp"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="7dp"
            android:background="@color/green"/>
        <TextView
            android:id="@+id/login_find_email_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="#B5B5B5"
            android:text="이메일 찾기" />
        <View
            android:layout_width="1dp"
            android:layout_height="16dp"
            android:layout_marginTop="2dp"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="7dp"
            android:background="@color/green"/>
        <TextView
            android:id="@+id/login_find_pwd_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="#B5B5B5"
            android:text="비밀번호 찾기" />

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="107dp"
        android:text="SNS 계정을 연동하여 간편하게 로그인 할 수 있어요"
        android:textColor="#6A6A6A"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_log_in_btn" />

    <ImageView
        android:id="@+id/login_kakao_sign_in_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="142dp"
        android:src="@drawable/ic_profile_kakao_login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_log_in_btn"/>

</androidx.constraintlayout.widget.ConstraintLayout>