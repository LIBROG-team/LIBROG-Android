<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.home.HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/home_banner_iv"
            android:layout_width="wrap_content"
            android:layout_height="247dp"
            android:src="@drawable/homeBanner"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <ImageView
            android:id="@+id/home_banner_recentread_iv"
            android:layout_width="97dp"
            android:layout_height="30dp"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="18dp"
            android:background="@drawable/home_small_waterdrop_border"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/home_banner_recentread_tv"
            android:layout_width="68dp"
            android:layout_height="18dp"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="14dp"
            android:text="최근 읽은 책"
            android:letterSpacing="-0.05"
            android:fontFamily="@font/pd_semibold"
            android:textSize="15sp"
            app:layout_constraintTop_toTopOf="@+id/home_banner_recentread_iv"
            app:layout_constraintStart_toStartOf="@+id/home_banner_recentread_iv"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>



</FrameLayout>