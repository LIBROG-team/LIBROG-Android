<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/add_book_select_back_btn"
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:src="@drawable/addbook_select_back_btn"
        android:layout_marginStart="23dp"
        android:layout_marginTop="27.5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/add_book_select_back_tv"
        android:layout_width="98dp"
        android:layout_height="wrap_content"
        android:text="기록 추가하기"
        android:layout_marginTop="24dp"
        android:layout_marginStart="8dp"
        android:textSize="18sp"
        android:fontFamily="@font/pd_bold"
        android:lineSpacingExtra="21.84dp"
        app:layout_constraintStart_toEndOf="@id/add_book_select_back_btn"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/add_book_select_frame"
        android:layout_width="390dp"
        android:layout_height="745dp"
        android:layout_marginTop="32dp"
        android:background="#D9F1F1F1"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_book_select_back_tv" />

    <ImageView
        android:id="@+id/add_book_select_area1"
        android:layout_width="358dp"
        android:layout_height="137dp"
        android:layout_marginTop="14dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/addbook_select_border"
        app:layout_constraintTop_toTopOf="@+id/add_book_select_frame"
        app:layout_constraintStart_toStartOf="@+id/add_book_select_frame"/>

    <ImageView
        android:id="@+id/add_book_select_book_iv"
        android:layout_width="77dp"
        android:layout_height="111dp"
        android:src="@drawable/addbook_select_book_iv"
        android:layout_marginStart="16dp"
        android:layout_marginTop="13dp"
        app:layout_constraintStart_toStartOf="@+id/add_book_select_area1"
        app:layout_constraintTop_toTopOf="@+id/add_book_select_area1" />
    <TextView
        android:id="@+id/add_book_select_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="16dp"
        android:text="사피엔스"
        android:textSize="17sp"
        android:fontFamily="@font/pd_semibold"
        android:lineSpacingExtra="20.29dp"
        app:layout_constraintTop_toTopOf="@id/add_book_select_area1"
        app:layout_constraintStart_toEndOf="@id/add_book_select_book_iv"/>
    <TextView
        android:id="@+id/add_book_select_writer_tv"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:layout_marginTop="4dp"
        android:layout_marginStart="16dp"
        android:text="유발하라리"
        android:textSize="14sp"
        android:fontFamily="@font/pd_semibold"
        android:lineSpacingExtra="16.71dp"
        app:layout_constraintTop_toBottomOf="@id/add_book_select_title_tv"
        app:layout_constraintStart_toEndOf="@id/add_book_select_book_iv"/>

    <TextView
        android:id="@+id/add_book_select_explain_tv"
        android:layout_width="229dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/pd_regular"
        android:lineSpacingExtra="6.941dp"
        android:text="『사피엔스』는 중요한 순간을 살고 있는 우리에게 다가올 미래에 대해 어떤 전망이 있는지, 지금이 전망을 가져야 할 때라고 말한다."
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/add_book_select_book_iv"
        app:layout_constraintTop_toBottomOf="@id/add_book_select_writer_tv" />


    <ImageView
        android:id="@+id/add_book_select_area2"
        android:layout_width="358dp"
        android:layout_height="93dp"
        android:layout_marginTop="7dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/addbook_select_border"
        app:layout_constraintTop_toBottomOf="@id/add_book_select_area1"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/add_book_select_rate_tv"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginTop="13dp"
        android:layout_marginStart="15dp"
        android:text="이 책의 별점"
        android:textSize="17sp"
        android:fontFamily="@font/pd_semibold"
        app:layout_constraintTop_toTopOf="@id/add_book_select_area2"
        app:layout_constraintStart_toStartOf="@id/add_book_select_area2"/>
    <TextView
        android:id="@+id/add_book_select_rate_n_tv"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginTop="13dp"
        android:layout_marginStart="7dp"
        android:text="4/5"
        android:textSize="17sp"
        android:textColor="@color/green"
        android:fontFamily="@font/pd_semibold"
        app:layout_constraintTop_toTopOf="@id/add_book_select_area2"
        app:layout_constraintStart_toEndOf="@id/add_book_select_rate_tv"/>


    <ImageView
        android:id="@+id/add_book_select_area3"
        android:layout_width="358dp"
        android:layout_height="93dp"
        android:layout_marginTop="7dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/addbook_select_border"
        app:layout_constraintTop_toBottomOf="@id/add_book_select_area2"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/add_book_select_line_tv"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginTop="13dp"
        android:layout_marginStart="16dp"
        android:textSize="17sp"
        android:fontFamily="@font/pd_semibold"
        app:layout_constraintTop_toTopOf="@id/add_book_select_area3"
        app:layout_constraintStart_toStartOf="@id/add_book_select_area3"
        android:text="인상 깊은 한 줄"
        />
    <EditText
        android:id="@+id/add_book_select_line_write_et"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:textSize="14sp"
        android:fontFamily="@font/pd_medium"
        app:layout_constraintTop_toBottomOf="@+id/add_book_select_line_tv"
        app:layout_constraintStart_toStartOf="@id/add_book_select_area3" />


    <ImageView
        android:id="@+id/add_book_select_area4"
        android:layout_width="358dp"
        android:layout_height="300dp"
        android:layout_marginTop="7dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/addbook_select_border"
        app:layout_constraintTop_toBottomOf="@id/add_book_select_area3"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/add_book_select_review_tv"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginTop="13dp"
        android:layout_marginStart="16dp"
        android:text="독후감"
        android:textSize="17sp"
        android:fontFamily="@font/pd_semibold"
        app:layout_constraintTop_toTopOf="@id/add_book_select_area4"
        app:layout_constraintStart_toStartOf="@id/add_book_select_area4" />
    <EditText
        android:id="@+id/add_book_select_review_write_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:scrollbars="vertical"
        android:textSize="14sp"
        android:fontFamily="@font/pd_medium"
        app:layout_constraintTop_toBottomOf="@+id/add_book_select_review_tv"
        app:layout_constraintStart_toStartOf="@id/add_book_select_area4" />


    <ImageView
        android:id="@+id/add_book_select_finish_btn"
        android:layout_width="358dp"
        android:layout_height="47dp"
        android:layout_marginTop="9dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/addbook_select_finish_border"
        app:layout_constraintTop_toBottomOf="@id/add_book_select_area4"
        app:layout_constraintStart_toStartOf="parent"/>
    <ImageView
        android:id="@+id/add_book_select_check_iv"
        android:layout_width="20dp"
        android:layout_height="30dp"
        android:layout_marginTop="9dp"
        android:layout_marginStart="154.33dp"
        android:src="@drawable/book_select_check"
        app:layout_constraintTop_toTopOf="@id/add_book_select_finish_btn"
        app:layout_constraintStart_toStartOf="@id/add_book_select_finish_btn"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_marginStart="9.33dp"
        android:text="완료"
        android:textColor="@color/white"
        android:fontFamily="@font/pd_bold"
        app:layout_constraintTop_toTopOf="@id/add_book_select_finish_btn"
        app:layout_constraintStart_toEndOf="@id/add_book_select_check_iv"/>












</androidx.constraintlayout.widget.ConstraintLayout>
