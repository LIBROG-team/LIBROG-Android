<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/img_option_banner_selected"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/sign_up_back_btn"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:src="@drawable/ic_arrow_right"
            android:layout_marginStart="16dp"
            android:layout_marginTop="41dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원가입"
            android:layout_marginStart="8dp"
            android:layout_marginTop="39dp"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@id/sign_up_back_btn"
            app:layout_constraintTop_toTopOf="parent"/>
        <View
            android:id="@+id/sign_up_title_line"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="#D9D9D9"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/sign_up_back_btn"
            app:layout_constraintStart_toStartOf="parent"/>
        <FrameLayout
            android:id="@+id/sign_up_frame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/sign_up_title_line"
            app:layout_constraintStart_toStartOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>