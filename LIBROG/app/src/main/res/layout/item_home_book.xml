<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="193dp"
    android:layout_height="128dp"
    android:layout_marginLeft="9dp"

    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/item_home_book_frame_iv"
        android:layout_width="193dp"
        android:layout_height="128dp"
        android:background="@drawable/home_big_waterdrop_border"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/item_home_book_iv"
        android:layout_width="68dp"
        android:layout_height="101dp"
        android:src="@drawable/home_item_book"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_home_book_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:layout_marginLeft="9dp"
        android:text="사피엔스"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:fontFamily="@font/pd_semibold"
        app:layout_constraintStart_toEndOf="@+id/item_home_book_iv"
        app:layout_constraintTop_toTopOf="@+id/item_home_book_frame_iv"/>
    <TextView
        android:id="@+id/item_home_book_writer_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="9dp"
        android:text="유발하라리"
        android:textSize="13sp"
        android:textColor="@color/white"
        android:fontFamily="@font/pd_medium"
        app:layout_constraintStart_toEndOf="@+id/item_home_book_iv"
        app:layout_constraintTop_toBottomOf="@+id/item_home_book_title_tv"
        />
    <TextView
        android:id="@+id/item_home_book_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="9dp"
        android:text="2022.05.06"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:fontFamily="@font/pd_regular"
        app:layout_constraintStart_toEndOf="@+id/item_home_book_iv"
        app:layout_constraintTop_toBottomOf="@+id/item_home_book_writer_tv" />

</androidx.constraintlayout.widget.ConstraintLayout>