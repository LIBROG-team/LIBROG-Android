<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/su_nickname_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        android:layout_marginTop="56dp"
        android:text="리브로그"
        android:textSize="20sp"
        android:textColor="@color/green"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/su_explain1_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" 님,"
        android:layout_marginTop="56dp"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/su_nickname_tv"/>
    <TextView
        android:id="@+id/su_last_explain2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="프로필을 꾸며주세요"
        android:layout_marginTop="4dp"
        android:layout_marginStart="34dp"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/su_explain1_tv"
        app:layout_constraintStart_toStartOf="parent"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/su_profile_iv"
        android:layout_width="117dp"
        android:layout_height="117dp"
        android:layout_marginTop="65dp"
        app:civ_border_overlay="false"
        app:civ_border_width="1dp"
        app:civ_border_color="@color/green"
        android:src="@drawable/ic_profile_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/su_last_explain2"
        />
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/su_last_camera_iv"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginTop="83dp"
        android:layout_marginStart="91dp"
        app:civ_border_overlay="false"
        android:src="@drawable/ic_profile_camera"
        app:layout_constraintStart_toStartOf="@id/su_profile_iv"
        app:layout_constraintTop_toTopOf="@id/su_profile_iv"
        />
    <TextView
        android:id="@+id/su_nickname_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="57dp"
        android:layout_marginStart="34dp"
        android:text="자기소개"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/su_profile_iv"
        app:layout_constraintStart_toStartOf="parent"/>
    <EditText
        android:id="@+id/su_nickname_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        android:layout_marginTop="22dp"
        android:background="@null"
        android:hint="자기소개를 입력해주세요"
        android:inputType="text"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/su_nickname_title" />

    <View
        android:id="@+id/su_nickname_underscore_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="6dp"
        android:layout_marginStart="34dp"
        android:layout_marginEnd="34dp"
        android:background="@color/green"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/su_nickname_et" />
    <LinearLayout
        android:id="@+id/img_option_banner"
        android:layout_width="match_parent"
        android:layout_height="197dp"
        android:orientation="vertical"
        android:layout_marginTop="12dp"
        android:visibility="invisible"
        android:background="@drawable/history_banner_border"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/su_nickname_underscore_view"
        >
        <View
            android:id="@+id/img_option_banner_tip"
            android:layout_width="50dp"
            android:layout_height="3dp"
            android:background="@drawable/sign_up_tip_bg"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            />
        <TextView
            android:id="@+id/img_option_album_tv"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="18dp"
            android:layout_marginStart="21dp"
            android:text="앨범에서 사진/동영상 선택"
            android:textSize="14sp" />
        <View
            android:id="@+id/img_option_banner_line1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:background="#F4F4F4" />
        <TextView
            android:id="@+id/img_option_librog_tv"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="21dp"
            android:text="리브로그 프로필로 설정"
            android:textSize="14sp" />
        <View
            android:id="@+id/img_option_banner_line2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:background="#F4F4F4" />
        <TextView
            android:id="@+id/img_option_default_tv"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="21dp"
            android:text="기본 이미지로 변경"
            android:textSize="14sp" />
        <View
            android:id="@+id/img_option_banner_line3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:background="#F4F4F4"
            />
    </LinearLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/su_last_finish_btn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="34dp"
        android:layout_marginEnd="34dp"
        android:layout_marginTop="490dp"
        android:background="@drawable/btn_login_login_border"
        android:text="리브로그 시작하기"
        android:textColor="@color/green"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />




</androidx.constraintlayout.widget.ConstraintLayout>