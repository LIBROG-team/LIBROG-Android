<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.main.addFlowerpot.DetailUnlockedFpActivity">

    <ImageView
        android:id="@+id/detail_unlocked_back_btn_iv"
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_arrow_right"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/detail_unlocked_main_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/pd_semibold"
        android:text="@string/add_flowerpot_top_text"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:lineSpacingExtra="3.48dp"
        app:layout_constraintBottom_toBottomOf="@id/detail_unlocked_back_btn_iv"
        app:layout_constraintStart_toEndOf="@id/detail_unlocked_back_btn_iv"
        app:layout_constraintTop_toTopOf="@id/detail_unlocked_back_btn_iv" />
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/detail_unlocked_main_tv"
        app:layout_constraintStart_toStartOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/detail_unlocked_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pd_semibold"
                android:text="@string/add_flowerpot_name"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:lineSpacingExtra="3.87dp"
                android:letterSpacing="0.02"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="MissingConstraints" />


            <TextView
                android:id="@+id/detail_unlocked_eng_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/pd_semibold"
                android:text="@string/add_flowerpot_eng_name"
                android:textColor="@color/dark_gray"
                android:textSize="16sp"
                android:lineSpacingExtra="3.09dp"
                android:letterSpacing="0.02"
                app:layout_constraintEnd_toEndOf="@id/detail_unlocked_name_tv"
                app:layout_constraintStart_toStartOf="@id/detail_unlocked_name_tv"
                app:layout_constraintTop_toBottomOf="@id/detail_unlocked_name_tv" />



            <ImageView
                android:id="@+id/detail_unlocked_img_iv"
                android:layout_width="270dp"
                android:layout_height="270dp"
                android:layout_marginTop="37dp"
                android:adjustViewBounds="true"
                android:background="@drawable/icon_flowerpot_img_border"
                android:scaleType="center"
                android:src="@drawable/ic_lib_home_logo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/detail_unlocked_eng_name_tv" />

            <TextView
                android:id="@+id/detail_unlocked_content_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="47dp"
                android:fontFamily="@font/pd_regular"
                android:letterSpacing="0.01"
                android:lineSpacingExtra="4dp"
                android:text="@string/detail_unlocked_content"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@+id/detail_unlocked_img_iv"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/detail_unlocked_content_tv"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/detail_unlocked_select_iv"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="56dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/addbook_select_finish_border"
        android:text="@string/detail_unlocked_select"
        android:fontFamily="@font/pd_semibold"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:lineSpacingExtra="2.9dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
