<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_weight="1">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="745dp">
        <ImageView
            android:id="@+id/add_book_select_back_btn"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:src="@drawable/addbook_select_back_btn"
            android:layout_marginStart="23dp"
            android:layout_marginTop="27.5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/add_book_select_back_tv"
            android:layout_width="98dp"
            android:layout_height="wrap_content"
            android:text="@string/addbook_main_text"
            android:layout_marginTop="24dp"
            android:layout_marginStart="8dp"
            android:textSize="18sp"
            android:fontFamily="@font/pd_bold"
            android:lineSpacingExtra="21.84dp"
            app:layout_constraintStart_toEndOf="@id/add_book_select_back_btn"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/add_book_select_frame"
            android:layout_width="390dp"
            android:layout_height="745dp"
            android:layout_marginTop="32dp"
            android:background="#D9F1F1F1"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/add_book_select_back_tv" />

        <FrameLayout
            android:id="@+id/add_book_select_area1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/addbook_select_border"
            app:layout_constraintTop_toTopOf="@+id/add_book_select_frame"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/add_book_select_book_iv"
                    android:layout_width="77dp"
                    android:layout_height="111dp"
                    android:src="@drawable/addbook_select_book_iv"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="13dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />
                <TextView
                    android:id="@+id/add_book_select_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="109dp"
                    android:layout_marginEnd="20dp"
                    android:text="@string/addbook_select_writer"
                    android:textSize="17sp"
                    android:fontFamily="@font/pd_semibold"
                    android:lineSpacingExtra="20.29dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />
                <TextView
                    android:id="@+id/add_book_select_writer_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="17dp"
                    android:layout_marginTop="6dp"
                    android:text="@string/addbook_select_writer"
                    android:textSize="14sp"
                    android:fontFamily="@font/pd_semibold"
                    android:lineSpacingExtra="16.71dp"
                    app:layout_constraintTop_toBottomOf="@id/add_book_select_title_tv"
                    app:layout_constraintStart_toStartOf="@id/add_book_select_title_tv"
                    />

                <TextView
                    android:id="@+id/add_book_select_explain_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="109dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="13dp"
                    android:fontFamily="@font/pd_regular"
                    android:lineSpacingExtra="4dp"
                    android:text="@string/addbook_select_explain"
                    android:textSize="12sp"
                    app:layout_constraintStart_toEndOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/add_book_select_writer_tv"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </FrameLayout>


        <ImageView
            android:id="@+id/add_book_select_area2"
            android:layout_width="match_parent"
            android:layout_height="93dp"
            android:layout_marginTop="7dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/addbook_select_border"
            app:layout_constraintTop_toBottomOf="@id/add_book_select_area1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/add_book_select_rate_tv"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="13dp"
            android:layout_marginStart="15dp"
            android:text="@string/addbook_select_rate_text"
            android:textSize="17sp"
            android:fontFamily="@font/pd_semibold"
            app:layout_constraintTop_toTopOf="@id/add_book_select_area2"
            app:layout_constraintStart_toStartOf="@id/add_book_select_area2"/>
        <TextView
            android:id="@+id/add_book_select_rate_n_tv"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="13dp"
            android:layout_marginStart="7dp"
            android:text="@string/addbook_select_rate_n"
            android:textSize="17sp"
            android:textColor="@color/green"
            android:fontFamily="@font/pd_semibold"
            app:layout_constraintTop_toTopOf="@id/add_book_select_area2"
            app:layout_constraintStart_toEndOf="@id/add_book_select_rate_tv"/>

        <com.willy.ratingbar.BaseRatingBar
            android:id="@+id/add_book_select_rb"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:srb_clearRatingEnabled="true"
            app:srb_clickable="true"
            app:srb_isIndicator="false"
            app:srb_minimumStars="1"
            app:srb_numStars="5"
            app:srb_rating="4"
            app:srb_scrollable="true"
            app:srb_starHeight="22dp"
            app:srb_starPadding="0dp"
            app:srb_starWidth="21dp"
            app:srb_stepSize="1"
            app:srb_drawableFilled="@drawable/book_select_star_on"
            app:srb_drawableEmpty="@drawable/book_select_star_off"
            app:layout_constraintTop_toBottomOf="@+id/add_book_select_rate_tv"
            app:layout_constraintStart_toStartOf="@id/add_book_select_area2"
            app:layout_constraintEnd_toEndOf="@id/add_book_select_area2"/>

        <ImageView
            android:id="@+id/add_book_select_area3"
            android:layout_width="match_parent"
            android:layout_height="93dp"
            android:layout_marginTop="7dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/addbook_select_border"
            app:layout_constraintTop_toBottomOf="@id/add_book_select_area2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/add_book_select_line_tv"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="13dp"
            android:layout_marginStart="16dp"
            android:singleLine="true"
            android:textSize="17sp"
            android:fontFamily="@font/pd_semibold"
            app:layout_constraintTop_toTopOf="@id/add_book_select_area3"
            app:layout_constraintStart_toStartOf="@id/add_book_select_area3"
            android:text="@string/addbook_select_line"
            />
        <EditText
            android:id="@+id/add_book_select_line_write_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="32dp"
            android:inputType="text"
            android:textSize="14sp"
            android:fontFamily="@font/pd_medium"
            app:layout_constraintTop_toBottomOf="@+id/add_book_select_line_tv"
            app:layout_constraintStart_toStartOf="@id/add_book_select_area3"
            app:layout_constraintEnd_toEndOf="@id/add_book_select_area3"/>


        <ImageView
            android:id="@+id/add_book_select_area4"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="7dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/addbook_select_border"
            app:layout_constraintTop_toBottomOf="@id/add_book_select_area3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/add_book_select_review_tv"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="13dp"
            android:layout_marginStart="16dp"
            android:text="독후감"
            android:textSize="17sp"
            android:fontFamily="@font/pd_semibold"
            app:layout_constraintTop_toTopOf="@id/add_book_select_area4"
            app:layout_constraintStart_toStartOf="@id/add_book_select_area4" />
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="236dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            app:layout_constraintTop_toBottomOf="@id/add_book_select_review_tv"
            app:layout_constraintStart_toStartOf="@id/add_book_select_area4"
            app:layout_constraintEnd_toEndOf="@id/add_book_select_area4"
            android:scrollbars="vertical">
            <EditText
                android:id="@+id/add_book_select_review_write_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="vertical"
                android:textSize="14sp"
                android:fontFamily="@font/pd_medium" />
        </FrameLayout>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/add_book_select_finish_btn"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_marginTop="9dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/addbook_select_finish_border"
            android:paddingStart="33dp"
            android:text="완료"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/add_book_select_area4"
            tools:ignore="RtlSymmetry" />
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="18dp"
            android:src="@drawable/book_select_check"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/add_book_select_finish_btn"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>



